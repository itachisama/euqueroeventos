<% @contas.each do |conta| %>
  <tr>
    <td><%= conta.usuario_id %></td>
    <td><%= conta.perfil_id %></td>
    <td><%= conta.email %></td>
    <td><%= conta.senha %></td>
    <td><%= conta.ativo %></td>
    <td><%= conta.dataCadastro %></td>
